//User function Template for C++

//Complete this function
int countDigits(int n)
{
    if(n == 0)
        return 1;
    int res=0;
    while(n > 0)
    {
        n=n/10;
        res++;
    }
    return res;
   //Your code here
}

// { Driver Code Starts.

int main() {
	int T;
	cin>>T;
	while(T--)
	{
	    int n;
	    cin>>n;
	    
	    cout<<countDigits(n)<<endl;
	    
	    
	}
	return 0;
}


